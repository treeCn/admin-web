{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "commonjs": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "plugins": [
    "vue"
  ],
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-spacing": [2, { "before": false, "after": true }],
    "no-empty": 0,
    "no-tabs": 0,
    "no-mixed-spaces-and-tabs": 0,
    "vue/jsx-uses-vars": 2,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-console": [
      "warn"
    ],
    "no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": ""
      }
    ]
  }
}